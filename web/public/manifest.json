{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "name": "helpwave tasks",
  "short_name": "Tasks",
  "lang": "en",
  "scope": "/",
  "start_url": "/",
  "description": "The first open-source team management platform for healthcare workers",
  "orientation": "any",
  "categories": ["software", "medical", "health", "healthcare", "company", "management", "team", "workers"],
  "background_color": "#281c20",
  "theme_color": "#281c20",
  "display": "standalone",
  "display_override": ["standalone", "fullscreen", "minimal-ui"],
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "/touch-icon-128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/touch-icon-152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/touch-icon-167.png",
      "sizes": "167x167",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/touch-icon-180.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Go to dashboard",
      "url": "/",
      "icons": [{ "src": "/touch-icon-128.png", "sizes": "128x128" }]
    },
    {
      "name": "Tasks",
      "short_name": "Tasks",
      "description": "View my tasks",
      "url": "/tasks",
      "icons": [{ "src": "/touch-icon-128.png", "sizes": "128x128" }]
    },
    {
      "name": "Patients",
      "short_name": "Patients",
      "description": "View patients",
      "url": "/patients",
      "icons": [{ "src": "/touch-icon-128.png", "sizes": "128x128" }]
    }
  ]
}
